generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  name  String
  id    String @id @unique @default(uuid())
  class Int
  tags  String
}

model Admin {
  name        String
  id          String  @id @unique @default(uuid())
  password    String
  can_use_zap Boolean
}

model Avisos {
  author     String
  title      String
  body       String
  id         Int      @id @unique @default(autoincrement())
  img        String
  created_at DateTime @default(now())
  tags       String
}

